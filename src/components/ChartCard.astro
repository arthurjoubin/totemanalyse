---
import LocalChart from './LocalChart';

interface Props {
  indicatorKey: string;
  color: string;
  name: string;
  id?: string;
}

const { indicatorKey, color, name, id } = Astro.props;
---

<div class="relative" id={id}>
  <LocalChart client:load indicatorKey={indicatorKey} color={color} />
  <div class="px-4 pb-3 pt-1 border-t border-gray-100 bg-gray-50">
    <a
      href={`/indicateurs/${indicatorKey}/`}
      class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-medium text-gray-600 bg-white border border-gray-200 rounded-md hover:bg-totem-green hover:text-white hover:border-totem-green transition-colors"
    >
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
      Voir en d√©tail
    </a>
  </div>
</div>
