---
import LocalChart from './LocalChart';

interface Props {
  indicatorKey: string;
  color: string;
  name: string;
}

const { indicatorKey, color, name } = Astro.props;
---

<div class="group relative">
  <LocalChart client:load indicatorKey={indicatorKey} color={color} />
  <a
    href={`/indicateurs/${indicatorKey}/`}
    class="absolute inset-0 z-10 flex items-end justify-center pb-12 opacity-0 group-hover:opacity-100 transition-opacity bg-gradient-to-t from-black/10 to-transparent"
  >
    <span class="bg-white/95 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-medium text-gray-700 shadow-lg border border-gray-200 flex items-center gap-2 hover:bg-totem-green hover:text-white transition-colors">
      Voir {name} en d√©tail
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    </span>
  </a>
</div>
