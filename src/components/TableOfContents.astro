---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only H2 headings for a simple TOC
const h2Headings = headings.filter(h => h.depth === 2);
---

{h2Headings.length > 0 && (
  <nav class="toc">
    <div class="toc-title">Sommaire</div>
    <ul class="toc-list">
      {h2Headings.map((heading) => (
        <li>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    background: #fff;
    border: 1px solid #e5e7eb;
    padding: 1rem;
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #374151;
    margin-bottom: 0.75rem;
    padding: 0 0.25rem;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  .toc-list li {
    margin: 0;
  }

  .toc-list a {
    display: block;
    font-size: 0.8rem;
    color: #374151;
    text-decoration: none;
    padding: 0.35rem 0.5rem;
    transition: all 0.15s ease;
    border-left: 2px solid transparent;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  .toc-list a:hover {
    color: #006B4F;
    background: #f9fafb;
    border-left-color: #006B4F;
  }
</style>
