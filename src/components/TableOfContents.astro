---
interface Heading {
  depth: number;
  slug: string;
  text: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;

// Filter to only H2 headings for a simple TOC
const h2Headings = headings.filter(h => h.depth === 2);
---

{h2Headings.length > 0 && (
  <nav class="toc">
    <div class="toc-title">Sommaire</div>
    <ul class="toc-list">
      {h2Headings.map((heading) => (
        <li>
          <a href={`#${heading.slug}`}>{heading.text}</a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  .toc {
    background: #fafafa;
    border: 1px solid #e5e7eb;
    padding: 1.25rem 1.5rem;
    margin-bottom: 2rem;
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #006B4F;
    margin-bottom: 0.75rem;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 0;
  }

  .toc-list li {
    margin: 0;
    display: flex;
    align-items: center;
  }

  .toc-list li:not(:last-child)::after {
    content: "Â·";
    margin: 0 0.75rem;
    color: #9ca3af;
    font-weight: 700;
  }

  .toc-list a {
    font-size: 0.875rem;
    color: #374151;
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .toc-list a:hover {
    color: #006B4F;
  }
</style>
