---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Investissement • Bourse • Finance" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="icon" href="/images/logo_totem_analyse.png" type="image/x-icon">
</head>
<body class="bg-gray-50 min-h-screen">
    <slot />
</body>
</html>

<style is:global>
    /* Base typography - Journal/Newsletter style */
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        -webkit-font-smoothing: antialiased;
    }

    .prose h2 {
        font-size: 1.15rem;
        font-weight: 700;
        margin-top: 1.75rem;
        margin-bottom: 0.75rem;
        color: #111827;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        border-bottom: 2px solid #006B4F;
        padding-bottom: 0.4rem;
    }
    .prose h3 {
        font-size: 1.05rem;
        font-weight: 600;
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        color: #1f2937;
        padding-left: 0.6rem;
        border-left: 3px solid #006B4F;
    }
    .prose p {
        margin-bottom: 1rem;
        line-height: 1.65;
        color: #374151;
        font-size: 0.95rem;
    }
    .prose ul { list-style-type: disc; padding-left: 1.25rem; margin-bottom: 1rem; }
    .prose li { margin-bottom: 0.35rem; color: #374151; line-height: 1.6; font-size: 0.95rem; }
    .prose strong { color: #111827; font-weight: 600; }
    .prose blockquote {
        border-left: 3px solid #006B4F;
        padding-left: 1rem;
        margin: 1.25rem 0;
        font-style: italic;
        color: #4b5563;
        background: #f9fafb;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
    }

    /* Desktop styles */
    @media (min-width: 768px) {
        .prose h2 {
            font-size: 1.35rem;
            margin-top: 2.5rem;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
        }
        .prose h3 {
            font-size: 1.15rem;
            margin-top: 2rem;
            margin-bottom: 0.75rem;
            padding-left: 0.75rem;
        }
        .prose p {
            margin-bottom: 1.25rem;
            line-height: 1.75;
            font-size: 1.05rem;
        }
        .prose ul { padding-left: 1.5rem; margin-bottom: 1.25rem; }
        .prose li { margin-bottom: 0.5rem; line-height: 1.7; font-size: 1.05rem; }
        .prose blockquote {
            padding-left: 1.25rem;
            margin: 1.75rem 0;
            padding: 1rem 1.25rem;
            font-size: 1.05rem;
        }
    }
    .prose img {
        max-width: 100%;
        max-height: 70vh;
        height: auto;
        width: auto;
        object-fit: contain;
        border-radius: 0.25rem;
        margin: 1.75rem auto;
        display: block;
    }

    /* Support pour les images flottantes */
    .prose img.float-right {
        float: right;
        display: inline;
        margin: 0 0 1rem 1.5rem;
        max-width: 250px;
    }
    .prose img.float-left {
        float: left;
        display: inline;
        margin: 0 1.5rem 1rem 0;
        max-width: 250px;
    }

    /* Clearfix pour les conteneurs avec images flottantes */
    .prose::after {
        content: "";
        display: table;
        clear: both;
    }
    .prose a { color: #006B4F; text-decoration: underline; text-underline-offset: 2px; }
    .prose a:hover { color: #00A67B; }
    .prose hr { border: none; border-top: 1px solid #d1d5db; margin: 2.5rem 0; }

    /* Interview styles - Newspaper style (mobile-first) */
    .question {
        margin: 1.25rem 0 0.5rem 0;
        font-weight: 600;
        font-style: italic;
        color: #111827;
        font-size: 0.95rem;
        line-height: 1.55;
    }
    .question::before {
        content: "Jérémy ";
        font-style: normal;
        font-weight: 700;
        color: #006B4F;
    }
    .answer {
        margin-bottom: 1.25rem;
        color: #374151;
        line-height: 1.65;
        font-size: 0.95rem;
    }
    .answer::before {
        content: "Arthur ";
        display: block;
        font-weight: 700;
        color: #374151;
        margin-bottom: 0.25rem;
    }
    .concession {
        border-left: 3px solid #006B4F;
        padding-left: 1rem;
        margin: 1rem 0;
        font-style: italic;
        color: #6b7280;
        background: #f9fafb;
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
    }
    .highlight-box {
        background: #fafafa;
        border: 1px solid #e5e7eb;
        border-left: 4px solid #006B4F;
        padding: 1rem;
        margin: 1.25rem 0;
    }
    .highlight-box h3 {
        margin-top: 0;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.02em;
    }

    @media (min-width: 768px) {
        .question {
            margin: 2rem 0 0.75rem 0;
            font-size: 1.05rem;
            line-height: 1.65;
        }
        .answer {
            margin-bottom: 1.75rem;
            line-height: 1.75;
            font-size: 1.05rem;
        }
        .answer::before {
            margin-bottom: 0.35rem;
        }
        .concession {
            padding-left: 1.25rem;
            margin: 1.25rem 0;
            padding: 1rem 1.25rem;
            font-size: 1rem;
        }
        .highlight-box {
            padding: 1.5rem;
            margin: 2rem 0;
        }
        .highlight-box h3 {
            font-size: 1.1rem;
        }
    }
</style>
