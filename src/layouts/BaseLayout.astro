---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Investissement • Bourse • Finance" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content={description}>
    <link rel="icon" href="/images/logo_totem_analyse.png" type="image/x-icon">
</head>
<body class="bg-gray-50 min-h-screen">
    <slot />
</body>
</html>

<style is:global>
    /* Base typography - Journal/Newsletter style */
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        -webkit-font-smoothing: antialiased;
    }

    .prose h2 {
        font-size: 1.35rem;
        font-weight: 700;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        color: #111827;
        text-transform: uppercase;
        letter-spacing: 0.03em;
        border-bottom: 2px solid #006B4F;
        padding-bottom: 0.5rem;
    }
    .prose h3 {
        font-size: 1.15rem;
        font-weight: 600;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
        color: #1f2937;
        padding-left: 0.75rem;
        border-left: 3px solid #006B4F;
    }
    .prose p {
        margin-bottom: 1.25rem;
        line-height: 1.75;
        color: #374151;
        font-size: 1.05rem;
    }
    .prose ul { list-style-type: disc; padding-left: 1.5rem; margin-bottom: 1.25rem; }
    .prose li { margin-bottom: 0.5rem; color: #374151; line-height: 1.7; }
    .prose strong { color: #111827; font-weight: 600; }
    .prose blockquote {
        border-left: 3px solid #006B4F;
        padding-left: 1.25rem;
        margin: 1.75rem 0;
        font-style: italic;
        color: #4b5563;
        background: #f9fafb;
        padding: 1rem 1.25rem;
    }
    .prose img { max-width: 100%; height: auto; border-radius: 0.25rem; margin: 1.75rem 0; }
    .prose a { color: #006B4F; text-decoration: underline; text-underline-offset: 2px; }
    .prose a:hover { color: #00A67B; }
    .prose hr { border: none; border-top: 1px solid #d1d5db; margin: 2.5rem 0; }

    /* Interview styles - Newspaper style */
    .question {
        margin: 2rem 0 0.75rem 0;
        font-weight: 600;
        font-style: italic;
        color: #111827;
        font-size: 1.05rem;
        line-height: 1.65;
    }
    .question::before {
        content: "Jérémy ";
        font-style: normal;
        font-weight: 700;
        color: #006B4F;
    }
    .answer {
        margin-bottom: 1.75rem;
        color: #374151;
        line-height: 1.75;
        font-size: 1.05rem;
    }
    .answer::before {
        content: "Arthur ";
        display: block;
        font-weight: 700;
        color: #374151;
        margin-bottom: 0.35rem;
    }
    .concession {
        border-left: 3px solid #006B4F;
        padding-left: 1.25rem;
        margin: 1.25rem 0;
        font-style: italic;
        color: #6b7280;
        background: #f9fafb;
        padding: 1rem 1.25rem;
    }
    .highlight-box {
        background: #fafafa;
        border: 1px solid #e5e7eb;
        border-left: 4px solid #006B4F;
        padding: 1.5rem;
        margin: 2rem 0;
    }
    .highlight-box h3 {
        margin-top: 0;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 0.02em;
    }
</style>
